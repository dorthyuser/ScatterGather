	<sub-flow name="GetOrderDetailsSub_Flow" doc:id="bb4c255a-c986-47b8-ab84-78dda5e6aa5c" >
		<http:request method="GET" doc:name="Request" doc:id="eaed63ec-565b-4aae-8b7c-f62cbb5323a4" config-ref="HTTP_Request_configuration" path="/orders"/>
	</sub-flow>
</mule>
