		<http:request-connection host="localhost" port="8082" />
	</http:request-config>
	<http:request-config name="HTTP_Request_configuration" doc:name="HTTP Request configuration" doc:id="a0c964fe-ce61-4e0c-9cb3-6c1f770e6f35" >
		<http:request-connection host="localhost" port="8083" />
	</http:request-config>
	<flow name="SGFlow" doc:id="db000272-bcec-4158-b249-7afe3b81b159" >
