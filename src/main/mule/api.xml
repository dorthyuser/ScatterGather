			</route>
		</scatter-gather>
		<set-payload value="#[%dw 2.0&#10;output application/json&#10;---&#10;payload[0].payload ++ payload[1].payload]" doc:name="Set Payload" doc:id="ce86b777-e0a9-464c-ba93-0f201de6e993" />
		<logger level="INFO" doc:name="Logger" doc:id="244e486f-08b6-4a10-a0a1-9b7f77f79da8" message="After scatter gather #[payload[0].payload ++ payload[1].payload ]"/>
	</flow>
